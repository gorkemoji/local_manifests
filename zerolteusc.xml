<?xml version="1.0" encoding="UTF-8"?>
<!-- Manifest for LineageOS and LineageOS based roms-->
<manifest>

    <remote name="nexus"
            fetch="https://github.com"
            revision="nx-9.0" />

    <!-- Device Trees -->
    <project path="device/samsung/zero-common" name="TeamNexus/android_device_samsung_zero-common" remote="nexus" />
    <project path="device/samsung/zerolteusc" name="gorkemoji/android_device_samsung_zerolteusc" remote="nexus" />

    <!-- Vendor folders -->
    <project path="vendor/samsung/zero-common" name="TeamNexus/android_vendor_samsung_zero-common" remote="nexus" />
    <project path="vendor/samsung/zero-usc" name="gorkemoji/android_vendor_samsung_zero-usc" remote="nexus" />

    <!-- Kernel -->
    <project path="kernel/samsung/exynos7420" name="gorkemoji/android_kernel_samsung_exynos7420" remote="nexus" />

    <!-- Hardware -->
    <project path="hardware/samsung" name="TeamNexus/android_hardware_samsung" remote="nexus" />
    <project path="hardware/samsung_slsi-cm/exynos" name="TeamNexus/android_hardware_samsung_slsi-cm_exynos" remote="nexus" />
    <project path="hardware/samsung_slsi-cm/exynos5" name="TeamNexus/android_hardware_samsung_slsi-cm_exynos5" remote="nexus" />
    <project path="hardware/samsung_slsi-cm/exynos7420" name="TeamNexus/android_hardware_samsung_slsi-cm_exynos7420" remote="nexus" />
    <project path="hardware/samsung_slsi-cm/openmax" name="TeamNexus/android_hardware_samsung_slsi-cm_openmax" remote="nexus" />

</manifest>
